[
  {
    "name": "theme_info",
    "theme_name": "Darkside Games",
    "theme_version": "1.0.0",
    "theme_author": "Darkside Games",
    "theme_documentation_url": "",
    "theme_support_url": ""
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Color scheme"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent color",
        "default": "#ef4444"
      },
      {
        "type": "color",
        "id": "color_accent_secondary",
        "label": "Secondary accent color",
        "default": "#dc2626"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background color",
        "default": "#0f172a"
      },
      {
        "type": "color",
        "id": "color_background_secondary",
        "label": "Secondary background color",
        "default": "#1e293b"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#f8fafc"
      },
      {
        "type": "color",
        "id": "color_text_muted",
        "label": "Muted text color",
        "default": "#94a3b8"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Headings"
      },
      {
        "type": "font_picker",
        "id": "type_header_font",
        "default": "assistant_n4",
        "label": "Heading font",
        "info": "Font for headings and titles"
      },
      {
        "type": "header",
        "content": "Body text"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "assistant_n4",
        "label": "Body font",
        "info": "Font for body text and navigation"
      }
    ]
  },
  {
    "name": "Layout",
    "settings": [
      {
        "type": "header",
        "content": "Container"
      },
      {
        "type": "range",
        "id": "page_width",
        "min": 1000,
        "max": 1400,
        "step": 100,
        "unit": "px",
        "label": "Page width",
        "default": 1200
      }
    ]
  },
  {
    "name": "Logo",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 50,
        "max": 300,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 120
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32px PNG recommended"
      }
    ]
  },
  {
    "name": "Navigation",
    "settings": [
      {
        "type": "link_list",
        "id": "main_menu",
        "label": "Main menu",
        "default": "main-menu"
      },
      {
        "type": "checkbox",
        "id": "enable_sticky_header",
        "label": "Enable sticky header",
        "default": true
      }
    ]
  },
  {
    "name": "Search",
    "settings": [
      {
        "type": "checkbox",
        "id": "predictive_search_enabled",
        "default": true,
        "label": "Enable predictive search"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_price",
        "default": true,
        "label": "Show product prices in search results"
      },
      {
        "type": "checkbox",
        "id": "predictive_search_show_vendor",
        "default": false,
        "label": "Show product vendors in search results"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "select",
        "id": "cart_type",
        "options": [
          {
            "value": "page",
            "label": "Page"
          },
          {
            "value": "drawer",
            "label": "Drawer"
          }
        ],
        "default": "drawer",
        "label": "Cart type"
      },
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "default": false,
        "label": "Enable cart notes"
      }
    ]
  },
  {
    "name": "Products",
    "settings": [
      {
        "type": "header",
        "content": "Product cards"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "default": false,
        "label": "Show product vendor"
      },
      {
        "type": "checkbox",
        "id": "show_quick_view",
        "default": true,
        "label": "Enable quick view"
      },
      {
        "type": "header",
        "content": "Product pages"
      },
      {
        "type": "checkbox",
        "id": "enable_zoom",
        "default": true,
        "label": "Enable image zoom"
      },
      {
        "type": "checkbox",
        "id": "enable_video_looping",
        "default": false,
        "label": "Enable video looping"
      }
    ]
  },
  {
    "name": "Collections",
    "settings": [
      {
        "type": "range",
        "id": "products_per_page",
        "min": 8,
        "max": 50,
        "step": 4,
        "label": "Products per page",
        "default": 24
      },
      {
        "type": "checkbox",
        "id": "enable_filtering",
        "default": true,
        "label": "Enable filtering"
      },
      {
        "type": "checkbox",
        "id": "enable_sorting",
        "default": true,
        "label": "Enable sorting"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "default": true,
        "label": "Enable sharing for blog articles"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_products",
        "default": true,
        "label": "Enable sharing for products"
      },
      {
        "type": "header",
        "content": "Social accounts"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "YouTube"
      },
      {
        "type": "text",
        "id": "social_twitch_link",
        "label": "Twitch"
      }
    ]
  },
  {
    "name": "Store information",
    "settings": [
      {
        "type": "header",
        "content": "Contact information"
      },
      {
        "type": "text",
        "id": "store_address",
        "label": "Store address",
        "default": "9620 S Las Vegas Blvd, Suite N9, Las Vegas, NV 89123"
      },
      {
        "type": "text",
        "id": "store_phone",
        "label": "Store phone",
        "default": "(702) 834-4113"
      },
      {
        "type": "text",
        "id": "store_email",
        "label": "Store email",
        "default": "info@darksidegames.com"
      },
      {
        "type": "textarea",
        "id": "store_hours",
        "label": "Store hours",
        "default": "Mon-Thu: 12PM-9PM\nFri: 12PM-11PM\nSat: 10AM-11PM\nSun: 10AM-8PM"
      }
    ]
  },
  {
    "name": "Newsletter",
    "settings": [
      {
        "type": "checkbox",
        "id": "newsletter_enable",
        "default": true,
        "label": "Show newsletter signup"
      },
      {
        "type": "text",
        "id": "newsletter_heading",
        "default": "Stay Updated",
        "label": "Newsletter heading"
      },
      {
        "type": "textarea",
        "id": "newsletter_text",
        "default": "Get the latest news on new arrivals and exclusive deals.",
        "label": "Newsletter text"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 32 x 32px"
      }
    ]
  }
